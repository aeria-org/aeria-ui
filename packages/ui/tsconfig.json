{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "paths": {
      "@aeria-ui/i18n": [
        "../i18n/dist"
      ],
      "@aeria-ui/core": [
        "../core/dist"
      ],
      "@aeria-ui/core/*": [
        "../core/dist/*"
      ],
      "@aeria-ui/state-management": [
        "../state-management/dist"
      ],
      "aeria-icons/core": [
        "../aeria-icons/core/dist"
      ]
    }
  },
  "types": [
    "../core/vue.d.ts",
    "../core/@types/env.d.ts"
  ],
  "include": [
    "@types/*.d.ts",
    "vue.d.ts",
    "src"
  ]
}
